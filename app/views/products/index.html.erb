<%= link_to("新建产品",new_product_path, :class => "btn btn-mini btn-primary pull-right") %>
</div>

<table class="table">
	<thead>
		<tr>
			<td>#</td>
			<td>名称</td>
			<td>描述</td>
		</tr>
	</thead>

	<tbody>
		<% @products.each do|product| %>
		<tr>
			<td> # </td>
			<td> <%= link_to(product.name, product_path(product))%></td>
			<td> <%= product.description %> </td>
			<td> <%= link_to("编辑", edit_product_path(product), :class => "btn btn-mini")%>
				<%= link_to("删除", product_path(product), :class => "btn btn-mini", :method=>:delete,:confirm=>"Are you sure?")%>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>
